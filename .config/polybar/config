[module/date]
type     = internal/date
interval = 5

date     =
date-alt = "%m/%d/%Y"

time     = %I:%M %p
time-alt = %I:%M %p

format-prefix            =
format-prefix-foreground = ${colors.foreground-alt}
format-underline         = ${colors.primary}

label = %date% %time%

